<h1>Update Pet</h1>
<h2>Edits for <%= @pet.name %></h2>
 
  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pets Name:</label>
    <br>
    <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
 
    <br>
    <p>Select an existing Owner or create a new one below.</p>
 
 
    <h3>Existing Owners</h3>
    <% @owner.each do |pet| %>
      <input type="radio" name="pet[owner_id]" id="<%= pet.id %>" value="<%= pet.id %>" <%='checked' if @pet.owner == pet %>><%= pet.name %></input><br>
    <% end %>
    <br>
 
    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>
 
    <input type="submit" value="Update Pet">
  </form>


